<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <ul>
    <li><input type="checkbox" <% if task.completed == true %>checked<% end %>> <%= link_to task.title, task_path(task) %> <%= link_to 'Delete task', task_path(task), method: :delete, data: {confirm: 'Are you sure?'} %></li>
  </ul>
<% end %>

<%= link_to 'Create a new task', new_task_path %>

